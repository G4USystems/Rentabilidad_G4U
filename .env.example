# Qonto API Configuration
QONTO_API_KEY=your_qonto_api_key_here
QONTO_ORGANIZATION_SLUG=your_organization_slug
QONTO_IBAN=your_iban_here

# Storage Configuration
# Options: "excel" (local), "airtable" (recommended for Vercel), "google_sheets"
STORAGE_TYPE=airtable

# Airtable Configuration (recommended - simple setup!)
# 1. Go to airtable.com/create - create a base named "Rentabilidad"
# 2. Create 4 tables: Transactions, Categories, Projects, Accounts
# 3. Go to airtable.com/account - create Personal Access Token
# 4. Get Base ID from URL: airtable.com/[BASE_ID]/...
AIRTABLE_TOKEN=your_personal_access_token
AIRTABLE_BASE_ID=your_base_id

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Report Settings
DEFAULT_CURRENCY=EUR
FISCAL_YEAR_START_MONTH=1

# Google OAuth Configuration
GOOGLE_CLIENT_ID=tu-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback
SECRET_KEY=una-clave-secreta-de-32-caracteres-minimo
ALLOWED_EMAIL_DOMAINS=example.com,anotherdomain.com
ALLOWED_EMAILS=user@example.com,user@anotherdomain.com
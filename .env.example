# Qonto API Configuration
QONTO_API_KEY=your_qonto_api_key_here
QONTO_ORGANIZATION_SLUG=your_organization_slug
QONTO_IBAN=your_iban_here

# Storage Configuration
# Set to "true" to use Google Sheets (required for Vercel)
# Set to "false" or omit for local Excel files
USE_GOOGLE_SHEETS=false

# Google Sheets Configuration (required if USE_GOOGLE_SHEETS=true)
# 1. Create a Google Cloud project
# 2. Enable Google Sheets API
# 3. Create a Service Account and download JSON credentials
# 4. Share your Google Sheet with the service account email
GOOGLE_SHEETS_ID=your_google_sheets_document_id
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# Report Settings
DEFAULT_CURRENCY=EUR
FISCAL_YEAR_START_MONTH=1

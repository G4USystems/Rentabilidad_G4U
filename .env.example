# Qonto API Configuration
QONTO_API_KEY=your_qonto_api_key_here
QONTO_ORGANIZATION_SLUG=your_organization_slug
QONTO_IBAN=your_iban_here

# Database Configuration (Supabase)
# Go to: Supabase Dashboard > Project Settings > Database > Connection string > URI
# Use "Transaction Pooler" mode for serverless (Vercel)
# Format: postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql+asyncpg://postgres.xxxx:your-password@aws-0-region.pooler.supabase.com:6543/postgres

# Optional: Supabase API (for future features)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_ANON_KEY=your_anon_key

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# Report Settings
DEFAULT_CURRENCY=EUR
FISCAL_YEAR_START_MONTH=1
